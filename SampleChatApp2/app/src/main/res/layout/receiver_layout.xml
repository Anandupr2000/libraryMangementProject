<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp">

    <TextView
        android:id="@+id/receivermsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/receiver_layout_shape"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" />

    <ImageView
        android:id="@+id/feeling"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/sendermsg"
        app:layout_constraintEnd_toStartOf="@+id/sendermsg"
        app:layout_constraintStart_toStartOf="@+id/sendermsg"
        app:layout_constraintTop_toTopOf="@+id/sendermsg"
        app:srcCompat="@drawable/smiley_smile_with_heart"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>