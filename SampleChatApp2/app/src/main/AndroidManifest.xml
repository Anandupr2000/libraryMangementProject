<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samplechatapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SampleChatApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.pdfview" />
        <activity android:name=".Activities.specificList" />
        <activity android:name=".Activities.listview" />
        <activity android:name=".Activities.registerWthPhnNo" />
        <activity
            android:name=".Activities.chatactivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.bookList" />
        <activity
            android:name=".Activities.RegisterActivity"
            android:parentActivityName=".Activities.Login" />
        <activity
            android:name=".Activities.profileform"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.OTPactivity" />
        <activity android:name=".Activities.user_login" />
        <activity android:name=".Activities.MainActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>